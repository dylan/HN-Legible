yOrange = rgba(252,102,33,1);
html
  *
    font-family: Palatino !important;
    font-size: 18px !important;
    line-height: 1.333em !important;
  body
    > center
      display: block;
      min-width: 720px !important;
      max-width: 1020px !important;
      margin: 0 auto !important;
      // width: 100%;
      table
        background-color: #fff !important;
        width: 100% !important;
        margin: 0;
        tr[style="height:5px"]
          height:1em !important;
        tr[style="height:10px"]
          height:2em !important;
        tbody tr:first-child > td
          > table
            tbody > tr > td:first-child a
              display: block;
              height:24px;
              width:24px;
              background-color: yOrange;
              &:before
                display: block;
                content:'Y';
                font-family: tahoma;
                font-size: 16px;
                text-align: center;
                line-height: 24px;
                color: #fff;
              img
                display: none;
        td
          float: left
          &.title
            font-size: .75em !important
          a
            color: yOrange;
            line-height: 16px !important;
            &:hover
              border-bottom: 1px solid yOrange;
              text-decoration: none !important;
            &[id^='up_']
              display: block;
              height:24px;
              width:24px;
              padding: 0;
              margin: 0;
              &:hover
                border: none;
              &:before
                content:'\25B2';
                display: block;
                height: 24px;
                width:24px;
                font-size:12px;
                line-height:20px;
                color: #ccc;
                &:hover
                  color: yOrange;
              img
                display: none;
          span.comhead
            font-size: 12px !important;
          span.comment, span.comment *
            font-size: 16px !important;
          &.default
          &.subtext
            font-size: 12px !important;
            color: #b5b5b5 !important;
            span
            a
            a font
              color: #c5c5c5;
              font-size: 12px !important;
              font[color="#3c963c"]
                color: #3c963c !important;
      span.pagetop
        line-height: 16px !important;
        *
          font-size: 16px !important;
          line-height: 16px !important;
        td[style^="text-align"]
          font-size: 16px !important;
        a[href="newest"]
          margin-left: 5%;
        .topsel a
          color: yOrange !important;
input, textarea, select
  font-family: Helvetica, Arial !important;
  font-size: .85em !important;